.form-group
  label(for="title") Title
  input.form-control(type="text", name="title", placeholder="What's your post?", value=post.title)
.form-group
  label(for="post") post
  textarea.form-control(name="content", rows="5")= post.content
.form-group
  label(for="tags") Tags
  input.form-control(type="text", name="tags", placeholder="tags separated by spaces", value=post.tags ? post.tags.join(" ") : "")
